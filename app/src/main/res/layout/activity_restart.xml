<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/bg">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/bg"
        android:layout_centerVertical="true"
        android:alpha="0.3" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_bg"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/restart_over"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/lifeTint"
            android:text="Game Over"
            android:textSize="30sp"
            android:fontFamily="casual"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/restart_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/scoreText"
            android:layout_marginTop="8dp"
            tools:text="Your score: 60"
            android:textSize="20sp"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:layout_below="@+id/restart_over" />

        <TextView
            android:id="@+id/restart_hscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/hscoreText"
            tools:text="Your highscore: 80"
            android:textSize="20sp"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:layout_below="@+id/restart_score" />

        <TextView
            android:id="@+id/restart_play_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:textColor="@color/lifeTint"
            android:text="Play again?"
            android:fontFamily="sans-serif"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_below="@+id/restart_hscore" />

        <Button
            android:id="@+id/restart_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:textColor="@color/scoreText"
            android:background="@drawable/button"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="26dp"
            android:textSize="16sp"
            android:layout_below="@+id/restart_play_again" />

        <Button
            android:id="@+id/restart_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"
            android:textColor="@color/scoreText"
            android:background="@drawable/button"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="26dp"
            android:textSize="16sp"
            android:layout_below="@+id/restart_play_again"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</RelativeLayout>