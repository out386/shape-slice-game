<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="GameTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:navigationBarColor">@color/navBar</item>
        <item name="android:statusBarColor">@color/topBg</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="RatingBarTheme">
        <item name="android:progressDrawable">@drawable/life</item>
        <item name="android:indeterminateDrawable">@drawable/life</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:maxHeight">24dp</item>
    </style>
</resources>